{
	"name": "vscode-generate-package-json",
	"version": "1.0.0",
	"description": "Generate your VSCode package.json file from code",
	"main": "src/index.js",
	"author": {
		"email": "awsdfgvhbjn@gmail.com",
		"name": "Sander Ronde"
	},
	"repository": {
		"url": "https://github.com/SanderRonde/vscode-generate-package-json"
	},
	"license": "MIT",
	"files": [
		"dist/**"
	],
	"scripts": {
		"bundle": "esbuild --bundle --minify --platform=node --external:typescript --external:prettier --outfile=dist/index.js src/index.ts",
		"test": "yarn bundle && ava test/test.ts",
		"lint": "eslint src --ext ts",
		"prepack": "yarn format && yarn lint && tsc && yarn bundle",
		"format": "prettier --write src test"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"devDependencies": {
		"@types/node": "^17.0.17",
		"ava": "^4.0.1",
		"esbuild": "^0.14.21",
		"eslint": "^8.9.0",
		"eslint-plugin-node": "^11.1.0",
		"gts": "^3.1.0",
		"prettier": "^2.5.1",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5"
	},
	"packageManager": "yarn@3.1.1"
}
